<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="chatWithRobot.Views.ChatsPage2"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:chatWithRobot.ViewModels"
    Title="Чаты">

    <ContentPage.BindingContext>
        <vm:ChatsViewModel />
    </ContentPage.BindingContext>

    <CollectionView ItemsSource="{Binding Chats}" SelectionMode="Single" SelectionChanged="CollectionView_SelectionChanged">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <StackLayout Padding="10">
                    <Label Text="{Binding Name}" FontAttributes="Bold" />
                    <Label Text="{Binding LastMessage.Text}" LineBreakMode="TailTruncation" />
                    <Label Text="{Binding LastMessage.Date, StringFormat='{0:g}'}" FontSize="Small" />
                    <Label Text="{Binding LastMessage.Sender}" FontSize="Small" />
                </StackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
